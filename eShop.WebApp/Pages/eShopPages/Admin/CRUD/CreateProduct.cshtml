@page
@model eShop.WebApp.Pages.eShopPages.Admin.CRUD.CreateProductModel
@{
}
<form method="post" class="d-flex justify-content-center" enctype="multipart/form-data">

    <div class="d-flex flex-column justify-content-center col-6">
        <div class="mb-3 col-12">
            <label class="form-label">Title</label>
            <input asp-for="ProductName" type="text" class="form-control">
        </div>
        <div class="mb-3 col-12">
            <label class="form-label">Description</label>
            <textarea asp-for="ProductDescription" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Manufacture</label>
            <input asp-for="Manufacture" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Stock</label>
            <input asp-for="Stock" type="number" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Image</label>
            <input asp-for="Image" type="file" accept="image/*" class="form-control" />
        </div>
        <div>
            <label>Categories:</label>
            <select asp-for="CategoryIds" asp-items="@Model.Categories" multiple>
                <option value="">Choose Categories</option>
            </select>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Create</button>
            <button type="button" class="btn btn-danger">Cancel</button>
        </div>
    </div>

</form>